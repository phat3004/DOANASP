@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                method: "GET",
                url: "../api/GetAPI/GetSupplier",

                success: function (list) {
                    listJSON = JSON.parse(list);

                    var data = '';
                    $.each(listJSON, function (key, value) {
                        data += '<tr class="result">';
                        data += '<td>' + value.Name + '</td>';
                        data += '<td>' + value.Img + '</td>';
                        data += '<td>' + value.Address + '</td>';
                        data += '<td>' + value.Phone + '</td>';                    
                        data += '</tr>';

                    });
                    $('#list-ddt').append(data);
                }

            });

        });

    </script>
