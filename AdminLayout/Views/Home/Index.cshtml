<!-- Start Categories  -->
<div class="categories-shop">
    <div class="container">
        <div class="row">
            @foreach (var item in ViewBag.listSupplier)
            {
                <a href="@Url.Action("Index","Category", new { id = item.SupplierID })">
                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        <div class="shop-cat-box" style="height: 23em">
                            <img class="img-fluid" src="~/supplier/@item.Img" alt="supplỉe-img" />
                            <a class="btn hvr-hover" href="#">@item.Name</a>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
<!-- End Categories -->
<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
