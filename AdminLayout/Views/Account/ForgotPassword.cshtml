@model AdminLayout.Models.ForgotPasswordModel
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">ForgotPassword</div>
                    <div class="card-body">
                        <form asp-controller="Account" asp-action="ForgotPassword" >
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="Email" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                <div class="col-md-6">
                                    <input asp-for="Email" id="email_address" class="form-control" required autofocus>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>                           
                            <div class="col-md-6 offset-md-4">
                                <div class="form-group">
                                    <input type="submit" value="Submit" class="btn btn-primary" /> 
                                </div>                               
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

    
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
