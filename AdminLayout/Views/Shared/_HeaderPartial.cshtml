<header class="main-header">
    <!-- Start Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
        <div class="container">
            <!-- Start Header Navigation -->
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/user/images/logo.png" class="logo" alt=""></a>
            </div>
            <!-- End Header Navigation -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-menu">
                <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">About Us</a>
                    </li>
                    <li class="dropdown megamenu-fw">
                        <a class="nav-link fa-caret-down fas" data-toggle="dropdown">Product</a>
                        <ul class="dropdown-menu megamenu-content" role="menu">
                            <li>
                                <div class="row">
                                    <div class="col-menu col-md-3">
                                        <h6 class="title">Category</h6>
                                        <div class="content">
                                            <ul class="menu-col">
                                                @foreach (var item in ViewBag.listCategory)
                                                {
                                                    <li>@Html.ActionLink((string)@item.Name, "Index", "Category", new { id = @item.CategoryID })</li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- end col-3 -->
                                    <div class="col-menu col-md-3">
                                        <h6 class="title">Supplier</h6>
                                        <div class="content">
                                            <ul class="menu-col">
                                                @foreach (var item in ViewBag.listSupplier)
                                                {
                                                    <li>@Html.ActionLink((string)@item.Name, "Index", "Supplier", new { id = item.SupplierID })</li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- end col-3 -->
                                    <div class="col-menu col-md-3">
                                        <h6 class="title">Shoes</h6>
                                        <div class="content">
                                            <ul class="menu-col">
                                                <li><a href="shop.html">Top Wear</a></li>
                                                <li><a href="shop.html">Party wear</a></li>
                                                <li><a href="shop.html">Bottom Wear</a></li>
                                                <li><a href="shop.html">Indian Wear</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="col-menu col-md-3">
                                        <h6 class="title">Orther</h6>
                                        <div class="content">
                                            <ul class="menu-col">
                                                <li><a href="shop.html">Bags</a></li>
                                                <li><a href="shop.html">Sunglasses</a></li>
                                                <li><a href="shop.html">Fragrances</a></li>
                                                <li><a href="shop.html">Wallets</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- end col-3 -->
                                </div>
                                <!-- end row -->
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="nav-link fa-caret-down fas" data-toggle="dropdown">Shop</a>
                        <ul class="dropdown-menu">
                            <li><a href="cart.html">Cart</a></li>
                            <li><a href="checkout.html">Checkout</a></li>
                            <li><a href="my-account.html">My Account</a></li>
                            <li><a href="wishlist.html">Wishlist</a></li>
                            <li><a href="shop-detail.html">Shop Detail</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="service.html">Our Service</a></li>
                    <li class="nav-item"><a class="nav-link" href="contact-us.html">Contact Us</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- Start Atribute Navigation -->
            <div class="attr-nav">
                <ul>
                    <li class="search"><a href="#"><i class="fa fa-search"></i></a></li>
                    <li class="side-menu">
                        <a id="countCart" href="#">
                            <i class="fa fa-shopping-bag"></i>
                            @{
                                int count = 0;
                                if (ViewBag.carts == null)
                                {
                                    <span class="badge">@count</span>
                                }
                                else
                                {
                                    foreach (var item in ViewBag.carts)
                                    {
                                        count++;
                                    }
                                    <span class="badge">@count</span>
                                }
                            }
                        </a>
                    </li>
                </ul>
            </div>
            <!-- End Atribute Navigation -->
        </div>
        <!-- Start Side Menu -->
        <div class="side">
            <a href="#" class="close-side"><i class="fa fa-times"></i></a>
            <li class="cart-box">
                <ul id="cartList" class="cart-list">
                    @{ decimal grandtotal = 0;}
                    @{
                        if (ViewBag.carts != null)
                        {
                            foreach (var item in ViewBag.carts)
                            {
                                string txt_class = "quantity_" + item.Product.ProductID;
                                decimal total = item.Product.Price * item.Quantity;
                                grandtotal += total;
                                <li>

                                    <a asp-controller="Detail" asp-action="Index" asp-route-id="@item.Product.ProductID" class="photo"><img src="~/pro/@item.Product.Img" class="cart-thumb" alt="" /></a>
                                    <h6><a asp-controller="Detail" asp-action="Index" asp-route-id="@item.Product.ProductID"> @item.Product.Name </a></h6>
                                    <p>@item.Quantity x <span class="price">@item.Product.Price</span></p>
                                </li>
                            }
                        }
                        else
                        {
                            <li>
                                <h6 class="alert alert-danger">Giỏ hàng trống</h6>
                            </li>
                        }
                    }
                    <li class="total">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-default hvr-hover btn-cart">VIEW CART</a>
                        <span class="float-right"><strong>Total</strong>: @{@grandtotal}</span>
                    </li>
                </ul>
            </li>
        </div>
        <!-- End Side Menu -->
    </nav>
    <!-- End Navigation -->
</header>
